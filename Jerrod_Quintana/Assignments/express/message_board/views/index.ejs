<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    </script>
  </head>
  <body>
    <div class="">
      <h1>The Dojo Message Board</h1>
      <hr>
      <form class="" action="/message" method="post">
        Name: <input type="text" name="name" value="">
        Message: <textarea name="message" rows="8" cols="40"></textarea>
        <input type="submit" name="submit" value="Post Message">
      </form>
      <% if(typeof(err) != 'undefined'){ %>
        <% for (var i in err){ %>
          <p><%= err[i].message %></p>
        <% } %>
      <% } %>
      <% for (var i in messages) { %>
        <h3>Name: <%= messages[i].name %> </h3>
        <h3>Message: <%= messages[i].message %></h3>
        <form class="" action="/comment/<%= messages[i]._id%>" method="post">
          Name: <input type="text" name="name" value="">
          Comment: <input type="text" name="comment" value="">
          <input type="submit" name="submit" value="Post Comment">
        </form>
        <% for (var x = 0; x < messages[i].comments.length; x++){ %>
          <h5>Name:<%= messages[i].comments[x].name %></h5>
          <h5>Comment:<%= messages[i].comments[x].comment %></h5>
        <% } %>
      <% } %>
    </div>
  </body>
</html>
